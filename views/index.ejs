<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="/styles.css" rel="stylesheet"/>
  <title><%= name %>'s Portfolio</title>
</head>
<body class="bg-gray-100 text-gray-800 font-sans p-6">
  <div class="max-w-4xl mx-auto bg-white shadow-xl rounded-lg p-8">
    <h1 class="text-3xl font-bold mb-2"><%= name %></h1>
    <p class="text-lg text-gray-600 mb-6"><%= title %></p>

    <section class="mb-6">
      <h2 class="text-xl font-semibold mb-2">Summary</h2>
      <p><%= summary %></p>
    </section>

    <section class="mb-6 grid grid-cols-2 gap-4">
      <div>
        <h2 class="text-xl font-semibold mb-2">Strengths</h2>
        <ul class="list-disc pl-5">
          <% strengths.forEach(item => { %><li><%= item %></li><% }); %>
        </ul>
      </div>
      <div>
        <h2 class="text-xl font-semibold mb-2">Weaknesses</h2>
        <ul class="list-disc pl-5">
          <% weaknesses.forEach(item => { %><li><%= item %></li><% }); %>
        </ul>
      </div>
    </section>

    <section class="mb-6">
      <h2 class="text-xl font-semibold mb-2">Skills</h2>
      <p><%= skills.join(', ') %></p>
    </section>

    <section class="mb-6">
      <h2 class="text-xl font-semibold mb-2">Projects</h2>
      <ul class="list-disc pl-5">
        <% projects.forEach(p => { %>
          <li><strong><%= p.name %>:</strong> <%= p.desc %></li>
        <% }); %>
      </ul>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-2">Contact</h2>
      <p>Email: <%= contact.email %></p>
      <p>Location: <%= contact.location %></p>
    </section>
  </div>
</body>
</html>